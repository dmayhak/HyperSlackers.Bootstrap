@Html.Bootstrap().Button("Primary").Style(ButtonStyle.Primary)
@Html.Bootstrap().Button("Primary (Disabled)").Style(ButtonStyle.Primary).Disabled()

<h5>Block</h5>

@using (var well = Html.Bootstrap().BeginWell(new Well().Class("center-block").Style("max-width", "300px;")))
{
    @Html.Bootstrap().Button("Block level Button").Style(ButtonStyle.Primary).ButtonBlock()
    @Html.Bootstrap().Button("Another Block Button").ButtonBlock()
}

<h5>Buttons with Icons</h5>

@Html.Bootstrap().Button("Append CheckSquare Icon").AppendIcon(FontAwesomeIconType.CheckSquare)
@Html.Bootstrap().Button("Prepend Dollar Icon").PrependIcon(FontAwesomeIconType.Dollar)
@Html.Bootstrap().Button("Append and Prepend Icons").PrependIcon(FontAwesomeIconType.Envelope).AppendIcon(FontAwesomeIconType.Flag)

<h5>Button Tooltips</h5>

@Html.Bootstrap().Button("With Tooltip").Tooltip("Tooltip text goes here...")

<h5>Split Button</h5>

@using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup().Style(ButtonStyle.Primary).Size(ButtonSize.Small)))
{
    @group.Button("Button 1")
    using (var dd = group.BeginSplitDropDown(""))
    {
        @dd.ActionLink("Link 1", MVC.Home.ButtonsAndLinks())
        @dd.ActionLink("Link 2", MVC.Home.ButtonsAndLinks())
    }
}

<h5>Button Groups</h5>

@using (var group = Html.Bootstrap().BeginButtonGroup())
{
    @group.Button("Button 1")
    @group.Button("Button 2")
    @group.Button("Button 3")
    @group.Button("Button 4")
}
<br/>
<br/>
@using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup().Vertical()))
{
    @group.Button("Vertical Button 1")
    @group.Button("Vertical Button 2")
    @group.Button("Vertical Button 3")
    @group.Button("Vertical Button 4")
}
<br />
<br />
@using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup()))
{
    @group.Button().AppendIcon(FontAwesomeIconType.AlignLeft).Disabled()
    @group.Button().AppendIcon(FontAwesomeIconType.AlignCenter)
    @group.Button().AppendIcon(FontAwesomeIconType.AlignRight)
    @group.Button().AppendIcon(FontAwesomeIconType.AlignJustify)
