<br />
<br />
<div style="width:400px;">
    @using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup().Justified()))
    {
        @group.ActionLinkButton("LinkButton 1", MVC.Home.ButtonsAndLinks())
        @group.ActionLinkButton("LinkButton 2", MVC.Home.ButtonsAndLinks())
        @group.ActionLinkButton("LinkButton 3", MVC.Home.ButtonsAndLinks())
        @group.ActionLinkButton("LinkButton 4", MVC.Home.ButtonsAndLinks())
    }
</div>
<br />
<br />
<div style="width:400px;">
    @using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup().Justified()))
    {
        @group.Button("Button 1")
        @group.Button("Button 2")
        @group.Button("Button 3")
        @group.Button("Button 4")
    }
</div>

<h5>Nesting</h5>

@using (var group = Html.Bootstrap().BeginButtonGroup(new ButtonGroup()))
{
    @group.Button("A")
    @group.Button("B")
    using (var dd = group.BeginDropDown("C"))
    {
        @dd.ActionLink("C1", MVC.Home.ButtonsAndLinks())
        @dd.ActionLink("C2", MVC.Home.ButtonsAndLinks())
        @dd.ActionLink("C3", MVC.Home.ButtonsAndLinks())
        @dd.ActionLink("C4", MVC.Home.ButtonsAndLinks())
    }
    @group.Button("D")
}

<h5>Button Toolbar</h5>

@using (var toolbar = Html.Bootstrap().BeginButtonToolbar(new ButtonToolbar().Size(ButtonSize.ExtraSmall)))
{
    using (var group = toolbar.BeginButtonGroup(new ButtonGroup()))
    {
        @group.Button("1")
        @group.Button("2")
        @group.Button("3")
        @group.Button("4")
    }
    using (var group = toolbar.BeginButtonGroup(new ButtonGroup()))
    {
        @group.Button("A")
        @group.Button("B")
        using (var dd = group.BeginDropDown(new DropDown("C")))
        {
            @dd.ActionLink("C1", MVC.Home.ButtonsAndLinks())
            @dd.ActionLink("C2", MVC.Home.ButtonsAndLinks())
            @dd.ActionLink("C3", MVC.Home.ButtonsAndLinks())
            @dd.ActionLink("C4", MVC.Home.ButtonsAndLinks())
        }
        @group.Button("D")
    }
}


