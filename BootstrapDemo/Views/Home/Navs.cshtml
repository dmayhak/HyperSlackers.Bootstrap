
@{
    ViewBag.Title = "Navs";
}

<h2>Navs</h2>

<h3>Plain Nav</h3>

@using (var nav = Html.Bootstrap().BeginNav())
{
    @nav.ActionLink("Link 1", MVC.Home.Navs(), true)
    @nav.ActionLink("Link 2", MVC.Home.Navs())
    @nav.ActionLink("Link 3", MVC.Home.Navs())
    using (var dd = nav.BeginDropDown(new DropDown("DropDown 1")))
    {
        @dd.ActionLink("Link 4", MVC.Home.Navs())
        @dd.ActionLink("Link 5", MVC.Home.Navs())
        @dd.ActionLink("Link 6", MVC.Home.Navs())
        @dd.Divider()
        @dd.ActionLink("Link 7", MVC.Home.Navs())
        @dd.ActionLink("Link 8", MVC.Home.Navs())
    }
}

